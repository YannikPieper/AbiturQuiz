<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#1976D2">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/minus"
            android:onClick="minus"
            android:background="@drawable/settingsbtn"
            style="@style/TextAppearance.AppCompat.Display1"
            android:textSize="40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="5"
            android:id="@+id/quNumber"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            style="@style/TextAppearance.AppCompat.Display1"
            android:textSize="40dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/plus"
            android:onClick="plus"
            android:background="@drawable/settingsbtn"
            style="@style/TextAppearance.AppCompat.Display1"
            android:textSize="40dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Anzahl der Fragen"
        android:id="@+id/textView2"
        style="@style/TextAppearance.AppCompat.Display1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dip"
        android:layout_marginLeft="40dip"
        android:layout_marginRight="40dip"
        android:id="@+id/linearLayout2">

        <Button
            style="@style/TextAppearance.AppCompat.Display1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PrÃ¼fungsfach"
            android:id="@+id/fach"
            android:onClick="Fach"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/settingsbtn"
            android:textSize="30dp" />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start!"
        android:id="@+id/startQuestions"
        android:onClick="startQuestions"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/settingsbtn"
        android:layout_margin="10dp"
        style="@style/TextAppearance.AppCompat.Display1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Keine Kategorie"
        android:id="@+id/kat"
        android:layout_above="@+id/startQuestions"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dip"
        style="@style/TextAppearance.AppCompat.Display1"
        android:textSize="25dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kategorien"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="10dip"
        android:layout_marginLeft="10dip"
        android:layout_above="@+id/textView11"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginTop="20dip"
        android:layout_marginBottom="20dip" />

</RelativeLayout>